---
const { color, title, subtitle, id } = Astro.props
const textColor = `text-${color}`
---

<section
  id={id}
  class='landing-section bg-black h-screen w-full text-center overflow-hidden relative'
  data-header-color={color}
>
  <div class='z-30 relative flex flex-col h-full'>
    <header>
      <h2 class=`${textColor} pt-40 text-4xl font-medium`>{title}</h2>
      <p class=`${textColor} text-sm pt-2`>{subtitle}</p>
    </header>

    <footer class='flex flex-col flex-grow flex-nowrap justify-end pb-20'>
      <slot name='footer' />
    </footer>
  </div>

  <div class='absolute top-0 bottom-0 h-full w-full z-10'>
    <slot name='background' />
    <slot name='gradient' />
  </div>
</section>
