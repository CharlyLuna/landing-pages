---
import Section from "./Section.astro"
---

<Section
  title='Experience Tesla'
  subtitle='Schedule a Demo Drive Today'
  color='white'
>
  <video
    slot='background'
    class='object-center object-cover h-full w-full'
    src='/tesla-homepage-video.webm'
    autoplay
    muted
    loop
  >
  </video>
  <div slot='footer'>
    <a
      class='text-white border-[3px] border-white text-sm rounded py-2 px-20 font-medium bg-white/5 backdrop-blur-sm hover:bg-white hover:text-black transition-colors inline-block'
      href='#'>Demo Drive</a
    >
  </div>
</Section>
